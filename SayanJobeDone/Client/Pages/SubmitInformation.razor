@page "/fileinformation"
@using System.ComponentModel.DataAnnotations
@using SayanJobeDone.Shared.Models;
@using Microsoft.AspNetCore.Components.Forms

<h3>File Information</h3>

<EditForm Model="@fileInformation" OnValidSubmit="@HandleSubmit">
    

        <div class="form-group">
            <label for="FirstName">First Name</label>
            <InputText id="FirstName" class="form-control" @bind-Value="fileInformation.FirstName" />
            <ValidationMessage For="@(() => fileInformation.FirstName)" />
        </div>

        <div class="form-group">
            <label for="Nickname">Nickname</label>
            <InputText id="Nickname" class="form-control" @bind-Value="fileInformation.Nickname" />
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <InputText id="LastName" class="form-control" @bind-Value="fileInformation.LastName" />
            <ValidationMessage For="@(() => fileInformation.LastName)" />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <InputText id="Email" class="form-control" @bind-Value="fileInformation.Email" />
            <ValidationMessage For="@(() => fileInformation.Email)" />
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <InputText id="PhoneNumber" class="form-control" @bind-Value="fileInformation.PhoneNumber" />
            <ValidationMessage For="@(() => fileInformation.PhoneNumber)" />
        </div>

@*        <div class="form-group">
            <label for="Address">Address</label>
            <InputText id="Address" class="form-control" @bind-Value="fileInformation.Address.Street" />
            <ValidationMessage For="@(() => fileInformation.Address.Street)" />
        </div>*@

        <div class="form-group">
            <label for="City">City</label>
            <InputSelect id="City" class="form-control" @bind-Value="fileInformation.City">
                <option value="">-- Select City --</option>
                @foreach (var city in Enum.GetValues(typeof(City)))
                {
                    <option value="@city">@city</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => fileInformation.City)" />
        </div>

        <div class="form-group">
            <label for="Country">Country</label>
            <InputSelect id="Country" class="form-control" @bind-Value="fileInformation.Country">
                <option value="">-- Select Country --</option>
                @foreach (var country in Enum.GetValues(typeof(Country)))
                {
                    <option value="@country">@country</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => fileInformation.Country)" />
        </div>

        <div class="form-group">
            <label for="AdditionalInfo">Additional Information</label>
            <InputText id="AdditionalInfo" class="form-control" @bind-Value="fileInformation.AdditionalInfo" />
            <ValidationMessage For="@(() => fileInformation.AdditionalInfo)" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
</EditForm>

