@page "/map"
@inject IJSRuntime JSRuntime

<h3>Google Maps</h3>
<div class="container border-2 bg-info py-2 my-2">

    <div class="row">
        <div class="col-2">
            <label for="pac-input">Search for location</label>
        </div>
        <div class="col-10">
            <input id="pac-input" type="text" class="form-control"/>
        </div>
    </div>
    <div id="map" style="width: 100%;height:400px;" class="mt-2"></div>
</div>


@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initAutocomplete", null);
        }
        
    }
}
